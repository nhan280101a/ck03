<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#F1F1F1"
    tools:context=".activity.Tour_findtour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:backgroundTint="#F1F1F1"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Ten tour"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white">


        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="1/3/2013"
            android:textColor="#FF0000" />

        <ImageButton
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#FFFFFF"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_calendar_month_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:background="@drawable/bg_white"
        >

        <TextView
            android:id="@+id/tvTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Ten tour"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_calendar_month_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/3/2013"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_call_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05234534"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem chi tiet"
            android:layout_marginVertical="10dp"
            android:textColor="#FF0000"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="10"
        android:padding="10dp"
        android:background="@drawable/bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Nguoi lon"/>

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/people_minus"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:gravity="center"
                android:backgroundTint="@color/white"/>
            <TextView
                android:id="@+id/people_amount"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:textAlignment="center"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/people_add"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                android:gravity="center"
                android:backgroundTint="@color/white"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Tre em"/>

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/child_minus"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:gravity="center"
                android:backgroundTint="@color/white"/>
            <TextView
                android:id="@+id/child_amount"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:textAlignment="center"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/child_add"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                android:gravity="center"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        >

        <Button
            android:id="@+id/btnFillInfo"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:backgroundTint="#00587C"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:text="Tiep tuc"
            android:textColor="#F9FAFB" />

    </LinearLayout>



</LinearLayout>